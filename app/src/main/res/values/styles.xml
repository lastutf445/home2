<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="StyledTransparentButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="StyledTransparentImageButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>

    <style name="StyledBorderlessButton" parent="StyledTransparentButton">
    </style>

    <style name="StyledBorderlessButtonIcon" parent="StyledBorderlessButton">
        <item name="android:textAlignment">textStart</item>
        <item name="android:drawablePadding">32dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">28dp</item>
        <item name="android:layout_height">58dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="StyledSwitch" parent="Base.Widget.AppCompat.CompoundButton.Switch">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:height">58dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:clickable">false</item>
        <item name="android:layout_width">0dp</item>
    </style>

    <style name="StyledCheckbox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:button">@null</item>
        <item name="android:drawableRight">?android:attr/listChoiceIndicatorMultiple</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:height">58dp</item>
        <item name="android:clickable">false</item>
        <item name="android:layout_width">0dp</item>
    </style>

    <style name="StyledPointerButton" parent="StyledTransparentButton">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:height">58dp</item>

    </style>

</resources>
