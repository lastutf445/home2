<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/introIcon"
        android:layout_width="@dimen/inter64"
        android:layout_height="@dimen/inter64"
        android:tint="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.3"
        app:srcCompat="@drawable/module" />

    <TextView
        android:id="@+id/introTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/appName"
        android:textColor="#333"
        android:textSize="@dimen/inter24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/introIcon"
        app:layout_constraintStart_toStartOf="@+id/introIcon"
        app:layout_constraintTop_toBottomOf="@+id/introIcon"
        app:layout_constraintVertical_bias="0.35" />

    <TextView
        android:id="@+id/introDesc"
        android:layout_width="@dimen/inter256"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/inter48"
        android:lineSpacingExtra="@dimen/inter8"
        android:text="@string/introDesc1"
        android:textAlignment="center"
        android:textColor="#666"
        android:textSize="@dimen/inter16sp"
        app:layout_constraintEnd_toEndOf="@+id/introTitle"
        app:layout_constraintStart_toStartOf="@+id/introTitle"
        app:layout_constraintTop_toBottomOf="@+id/introTitle" />
</androidx.constraintlayout.widget.ConstraintLayout>