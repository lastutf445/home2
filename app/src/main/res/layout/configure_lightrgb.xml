<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/specialTitle"
        style="@style/StyledTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:text="@string/unknownModule" />

    <TextView
        android:id="@+id/textView49"
        style="@style/StyledSubtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/specialModule" />

    <LinearLayout
        android:id="@+id/specialLightRGBIsLit"
        style="@style/StyledTransparentButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Switch
            android:id="@+id/specialLightRGBIsLitCheckBox"
            style="@style/StyledSwitch"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/specialLightRGBIsLit" />
    </LinearLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/specialLightRGBColorWrapper"
        style="@style/StyledTransparentButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/specialLightRGBColor"
            style="@style/StyledButtonIcon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/specialLightRGBPickColor"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/specialLightRGBColorValue"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="8dp"
            android:tint="#aaa"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/specialLightRGBColor"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@android:color/black" />
    </android.support.constraint.ConstraintLayout>

</LinearLayout>