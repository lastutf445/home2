<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView23"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:text="@string/createModuleTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/createModuleTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="sans-serif-medium"
        android:text="@string/unknownModule"
        android:textColor="#555"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/textView23"
        app:layout_constraintTop_toBottomOf="@+id/textView23" />

    <TextView
        android:id="@+id/textView25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="sans-serif-medium"
        android:text="@string/serial"
        android:textColor="#555"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/createModuleTitle"
        app:layout_constraintTop_toBottomOf="@+id/createModuleTitle" />

    <TextView
        android:id="@+id/createModuleSerial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/undefined"
        app:layout_constraintBottom_toBottomOf="@+id/textView25"
        app:layout_constraintStart_toEndOf="@+id/textView25"
        app:layout_constraintTop_toTopOf="@+id/textView25" />

    <Button
        android:id="@+id/craeteModuleList"
        style="@style/StyledButtonIcon"
        android:layout_width="0dp"
        android:layout_height="58dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:drawableStart="@drawable/open_in_new"
        android:drawablePadding="16dp"
        android:drawableTint="#333"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:text="@string/createModuleList"
        android:textAllCaps="true"
        android:textColor="#333"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/textView23"
        app:layout_constraintTop_toBottomOf="@+id/textView25" />

    <Button
        android:id="@+id/createModuleApply"
        style="@style/StyledButtonIcon"
        android:layout_width="0dp"
        android:layout_height="58dp"
        android:drawableStart="@drawable/done"
        android:drawablePadding="16dp"
        android:drawableTint="@color/colorPrimary"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:text="@string/apply"
        android:textAlignment="textStart"
        android:textAllCaps="true"
        android:textColor="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="@+id/craeteModuleList"
        app:layout_constraintStart_toStartOf="@+id/createModuleTitle"
        app:layout_constraintTop_toBottomOf="@+id/craeteModuleList" />
</android.support.constraint.ConstraintLayout>