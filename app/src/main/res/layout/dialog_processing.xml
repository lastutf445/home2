<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/processingDialogWidth"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/processingTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/stdPadding"
        android:layout_marginEnd="@dimen/stdPadding"
        android:layout_weight="1"
        android:text="@string/processing"
        android:textSize="@dimen/inter14sp" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="@dimen/inter48"
        android:layout_height="@dimen/inter48"
        android:layout_marginStart="@dimen/inter24"
        android:layout_marginTop="@dimen/inter24"
        android:layout_marginEnd="@dimen/inter24"
        android:layout_marginBottom="@dimen/inter24"
        android:layout_weight="1" />
</LinearLayout>