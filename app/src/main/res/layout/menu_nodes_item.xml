<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nodesItem"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:background="?attr/selectableItemBackground">

    <TextView
        android:id="@+id/nodesItemTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="@string/nodes_unknown"
        android:textColor="#444"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/nodesItemModuleIcon"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginEnd="8dp"
        android:scaleType="fitCenter"
        android:tint="#777"
        app:layout_constraintBottom_toBottomOf="@+id/nodesItemTitle"
        app:layout_constraintEnd_toStartOf="@+id/nodesItemModulesCount"
        app:srcCompat="@drawable/modules" />

    <TextView
        android:id="@+id/nodesItemModulesCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:text="0"
        app:layout_constraintBottom_toBottomOf="@+id/nodesItemTitle"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/nodesItemSerial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/nodesItemTitle"
        app:layout_constraintStart_toEndOf="@+id/nodesItemTitle"
        app:layout_constraintTop_toTopOf="@+id/nodesItemTitle" />
</android.support.constraint.ConstraintLayout>