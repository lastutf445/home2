<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/StyledTransparentButton"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/widgetTitle"
        style="@style/WidgetTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/stdPadding"
        android:layout_marginEnd="@dimen/stdPadding"
        android:text="@string/defaultTitleSocket"
        android:textSize="@dimen/inter14sp"
        app:layout_constraintEnd_toStartOf="@+id/widgetValue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/widgetSubtitle"
        style="@style/WidgetSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/modulesTypeSocket"
        android:textSize="@dimen/inter12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/widgetTitle"
        app:layout_constraintTop_toBottomOf="@+id/widgetTitle" />

    <ImageView
        android:id="@+id/widgetValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/stdPadding"
        android:tint="#aaa"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/widgetTitle"
        app:srcCompat="@drawable/power_input" />

</androidx.constraintlayout.widget.ConstraintLayout>